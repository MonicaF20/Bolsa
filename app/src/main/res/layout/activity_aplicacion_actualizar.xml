<?xml version="1.0" encoding="utf-8"?>
<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:paddingTop="30dip"
    android:stretchColumns="1"
    android:background="#ffc6baff">
    <TableRow>
        <TextView android:text="@string/idAplicacionf"/>
        <EditText
            android:id="@+id/editIdAplicacionf"
            android:inputType="text"
            android:maxLength="5" />
    </TableRow>
    <TableRow>
        <TextView android:text="@string/spinnerEmpleado"/>
        <Spinner android:id="@+id/editSpinnerEmpleado"
            android:layout_height="wrap_content"
            android:layout_width="fill_parent" />

    </TableRow>
    <TableRow>
        <TextView android:text="@string/spinnerEmpresa"/>
        <Spinner android:id="@+id/editSpinnerEmpresa"
            android:layout_height="wrap_content"
            android:layout_width="fill_parent" />
        <!--android:prompt="@string/"-->
    </TableRow>
    <TableRow>
        <TextView android:text="@string/spinnerOferta"/>
        <Spinner android:id="@+id/editSpinnerOferta"
            android:layout_height="wrap_content"
            android:layout_width="fill_parent" />
    </TableRow>
    <TableRow>
        <Button android:onClick="consultarAplicacion"
            android:text="@string/modificarAplif"
            android:textAppearance="@style/estiloBotonFB12001"/>
    </TableRow>
    <TableRow>
        <TextView android:text="@string/fechaAplicacionf"/>
        <EditText
            android:id="@+id/editFechaAplicacionf"
            android:inputType="text"
            android:maxLength="10" />
    </TableRow>
    <TableRow>
        <TextView android:text="@string/estadoAplicacionf" />
        <EditText
            android:id="@+id/editEstadoAplicacionf"
            android:inputType="text"
            android:maxLength="30" />
    </TableRow>

    <LinearLayout>
        <Button
            android:onClick="actualizarAplicacion"
            android:text="@string/actualizar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="@style/estiloBotonFB12001"/>
        <Button
            android:onClick="limpiarTexto"
            android:text="@string/limpiar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="@style/estiloBotonFB12001"/>

    </LinearLayout>
    <LinearLayout>
        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="@string/FB12001" />
    </LinearLayout>
</TableLayout>