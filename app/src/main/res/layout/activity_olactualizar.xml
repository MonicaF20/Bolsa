<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:background="#fa5"
    tools:context="fia.ues.sv.bolsatrabajo.OLActualizarActivity">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/miCarnetRG12001"
        android:id="@+id/carnetRG12001"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textStyle="bold"
        android:textSize="@dimen/abc_text_size_headline_material"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/nomTablaOL"
        android:id="@+id/textView2"
        android:layout_below="@+id/carnetRG12001"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/opEditar"
        android:id="@+id/textView4"
        android:layout_below="@+id/textView2"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/idEmpresa"
        android:textAppearance="@style/nomCampos"
        android:id="@+id/textView9"
        android:layout_below="@+id/button5"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="32dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/idCargo2"
        android:textAppearance="@style/nomCampos"
        android:id="@+id/textView10"
        android:layout_marginTop="25dp"
        android:layout_below="@+id/textView9"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/fechaPub"
        android:textAppearance="@style/nomCampos"
        android:id="@+id/textView11"
        android:layout_marginTop="29dp"
        android:layout_below="@+id/textView10"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/fechaExp"
        android:textAppearance="@style/nomCampos"
        android:id="@+id/textView12"
        android:layout_marginTop="33dp"
        android:layout_below="@+id/textView11"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/editIDEmpOL"
        android:inputType="number"
        android:layout_above="@+id/textView10"
        android:layout_toRightOf="@+id/textView9"
        android:layout_alignRight="@+id/textView11"
        android:layout_alignEnd="@+id/textView11" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/editIDCarOL"
        android:inputType="number"
        android:layout_above="@+id/textView11"
        android:layout_toRightOf="@+id/textView10"
        android:layout_alignRight="@+id/textView2"
        android:layout_alignEnd="@+id/textView2" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="date"
        android:ems="10"
        android:id="@+id/editFechaPubOL"
        android:layout_above="@+id/textView12"
        android:layout_toRightOf="@+id/textView11"
        android:layout_toEndOf="@+id/textView11"
        android:editable="false"
        android:enabled="false" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="date"
        android:ems="10"
        android:id="@+id/editFechaExpOL"
        android:layout_alignBottom="@+id/textView12"
        android:layout_alignLeft="@+id/editFechaPubOL"
        android:layout_alignStart="@+id/editFechaPubOL" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/idOL"
        android:textAppearance="@style/nomCampos"
        android:id="@+id/textView13"
        android:layout_marginTop="30dp"
        android:layout_below="@+id/textView4"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:ems="10"
        android:id="@+id/editIDOL"
        android:layout_alignBaseline="@+id/textView13"
        android:layout_alignBottom="@+id/textView13"
        android:layout_toRightOf="@+id/textView13"
        android:layout_alignRight="@+id/editFechaPubOL"
        android:layout_alignEnd="@+id/editFechaPubOL" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/opConsultar"
        android:drawableLeft="@drawable/btn_buscar"
        android:id="@+id/button5"
        android:layout_marginTop="24dp"
        android:layout_below="@+id/editIDOL"
        android:layout_centerHorizontal="true"
        android:onClick="consultarOL" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/actualizarDatos"
        android:drawableLeft="@drawable/btn_editar"
        android:id="@+id/button6"
        android:layout_below="@+id/textView12"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="33dp"
        android:onClick="actualizarOL" />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/helptxt"
        android:textAppearance="@style/camposAyuda"
        android:id="@+id/helpEmp"
        android:layout_alignTop="@+id/textView9"
        android:layout_toRightOf="@+id/editIDEmpOL"
        android:layout_toEndOf="@+id/editIDEmpOL"
        android:onClick="helpEmp"
        android:clickable="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/helptxt"
        android:textAppearance="@style/camposAyuda"
        android:id="@+id/helpCar"
        android:onClick="helpCar"
        android:clickable="true"
        android:layout_above="@+id/textView11"
        android:layout_toRightOf="@+id/editIDCarOL"
        android:layout_toEndOf="@+id/editIDCarOL" />

</RelativeLayout>